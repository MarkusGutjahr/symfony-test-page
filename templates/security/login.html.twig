{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="form-outer-container">
        <div class="form-container">
            <h2>Login</h2>
            <form class="form" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div>
                    <label for="inputEmail" class="form-label">Email:</label>
                    <input type="email" id="inputEmail" name="email" value="{{ last_username }}" class="form-input" autocomplete="email" required autofocus>
                </div>
                <div>
                    <label for="inputPassword" class="form-label">Password:</label>
                    <input type="password" id="inputPassword" name="password" class="form-input" autocomplete="current-password" required>
                </div>
                <div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                </div>
                <button type="submit" class="form-submit-button">Login</button>
                <p>Don't have an account? <a href="{{ path('app_register') }}">Register here</a></p>
            </form>
        </div>
    </div>
{% endblock %}
