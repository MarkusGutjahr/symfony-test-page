{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="form-outer-container">
        <div class="form-container">
            <h2>Register</h2>
            {{ form_start(registrationForm, { 'attr': { 'class': 'form' } }) }}
            <div>
                <label for="{{ registrationForm.email.vars.id }}" class="form-label">Email:</label>
                {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-input' } }) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div>
                <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">Password:</label>
                {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-input' } }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
            <div>
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="form-submit-button">Register</button>
            <p>Already have an account? <a href="{{ path('app_login') }}">Login here</a></p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}